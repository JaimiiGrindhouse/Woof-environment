html(lang="en")

head
    //BOOTSTRAP LINKS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    
    //CSS LINK
    style
        include styles.css
    //TAB TITLE
    title Woof
    //FAVICON
    link(rel='icon' href='/images/logo.svg')


body(class='container')
    //NAVBAR
    nav(class='navbar fixed-top')
        div(class='row')
            div(class='col')
                img(src='/images/woof_text_logo_stacked.png' style='width:91px; height:41px;')
                    

    //APP BODY
    div(class='container')
        div(class='app')
            div(class='row')
                div(class='col-10 col-sm-20')
                    h1(class='card-title') Your Matching Dog Walkers

    table.table.table-striped
      tr
        th Name
        th Email
        th Phone
        th 
        th 

      each n in matchedAreas
        tr
          td= n.name
          td= n.email
          td= n.phone
          td
            img(src='/images/owners/' + n.id + '.jpg' class='img-fluid profile-pic' style='width:100; height:100px;')
          td
            img(src='/images/dogs/' + n.id + '.jpg' class='img-fluid profile-pic' style='width:100; height:100px;')
