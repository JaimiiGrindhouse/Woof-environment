html(lang="en")

head
    //RESPONSIVE DESIGN METATAGS 
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    //BOOTSTRAP LINKS, JQUERY AND FONTAWESOME
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    script(type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    //CSS LINK
    style
        include styles.css
    // SCRIPT.JS LINK
    script
        include script.js
    //TAB TITLE
    title Matches
    //FAVICON
    link(rel='icon' href='STYLE/LOGO.svg')

body(class='container')
    //NAVBAR
    nav(class='navbar fixed-top')
        div(class='row')
            div(clas='col')
                img(src='/images/LOGO.svg' style='width:45%')

    //APP BODY
    div(class='container')
        div(class='app')
            div(class='row')
                div(class='col-12')

    div(id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel")
        div(class="carousel-indicators")
            each user, index in filtered 
                button(type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to='#{index}' class="active" aria-current="true" aria-label="Slide 1")
        div(class="carousel-inner")
            each user, index in filtered 
                div(class="carousel-item active")
                    div(class='row offset-3 offset-sm-4')
                        h3 Top matches!
                    //MATCHING USER AND DOG PROFILE
                    div(class='card card-match')
                        div(class='card-body')
                            div(class='row offset-4 offset-sm-4 offset-lg-5')
                                h1(class='card-title') 
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-12')
                                            div(class='row offset-1 offset-sm-3 ')
                                                b #{user.person_name} and #{user.dog_name}
                                            div(class='row offset-2 offset-sm-3')
                                                div(class='col-5 col-sm-3 ')
                                                    img(src='/images/owners/' + user.person_ID + '.jpg' class='img-fluid profile-pic-match')
                                                div(class='col-5 col-sm-3 ')
                                                    img(src='/images/dogs/' + user.person_ID + '.jpg' class='img-fluid profile-pic-match')
                                                //implementation of img for user profile 
                                    div(class='matching-criteria')
                                        div(class='row offset-1 offset-sm-3 align-items-center')
                                            div(class='col-1')
                                                i(class="fa-solid fa-circle-check")
                                            div(class='col')
                                                p Size: #{user.dog_size}
                                        div(class='row offset-1 offset-sm-3 align-items-center')
                                            div(class='col-1')
                                                i(class="fa-solid fa-circle-check") 
                                            div(class='col')
                                                p Park: #{user.park}
                                    div(class='contact-info')
                                        div(class='row offset-3 offset-sm-3 align-items-center')
                                            div(class='col-4  col-sm-3 align-self-center')
                                                a(class='fa fa-envelope fa-2x' style="text-decoration: none" href="mailto:" + user.email)
                                            div(class='col-4 col-sm-3 align-self-center')
                                                a(class='fa fa-whatsapp fa-2x'  style="text-decoration: none" href="https://wa.me/" + user.phone_no)
    button(class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev")
        span(class="carousel-control-prev-icon" aria-hidden="true")
        span(class="visually-hidden") Previous
    button(class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next")
        span(class="carousel-control-next-icon" aria-hidden="true")
        span(class="visually-hidden") Next
  
  
    