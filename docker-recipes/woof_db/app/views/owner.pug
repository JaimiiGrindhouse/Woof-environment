
html(lang="en")

head
    //BOOTSTRAP LINKS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    
    //CSS LINK
    style
        include styles.css
    //TAB TITLE
    title Woof : #{owner.name}
    //FAVICON
    link(rel='icon' href='STYLE/LOGO.svg')
    

body(class='container')
    //NAVBAR
    nav(class='navbar fixed-top')
        div(class='row')
            div(clas='col')
                img(src='https://assets-global.website-files.com/5e3177cecf36f6591e4e38cb/5ea2a86505e63bdd814cf868_Logo.png' style='width:100px; height:100px;')
                    
                    
    //APP BODY
    div(class='container')
        div(class='app')
            div(class='row')
                div(class='col-12 col-sm-7')
                    //USER AND DOG PROFILE
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-4 offset-sm-4 offset-lg-5')
                                h2(class='card-title') Profile
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                p #{owner.name}
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='https://st2.depositphotos.com/1009634/7235/v/950/depositphotos_72350117-stock-illustration-no-user-profile-picture-hand.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Email: 
                                            p #{owner.email}
                                        div(class='row')
                                            b Phone No: 
                                            p #{owner.phone}
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                p Dog Name (p)
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='https://st2.depositphotos.com/1009634/7235/v/950/depositphotos_72350117-stock-illustration-no-user-profile-picture-hand.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Breed: 
                                            p #{owner.email}
                                        div(class='row')
                                            b Size: 
                                            p #{owner.phone}
                div(class='col-12 col-sm-5')
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-3 offset-sm-2 offset-lg-3')
                                h2(class='card-title') Go for a walk!
                            div(class='row offset-1 offset-sm-1')
                                div(class='dropdown')
                                    button(class='btn btn-primary dropdown-toggle' type='button') Choose your borough
                                div(class='row offset-1 offset-sm-1')
                                div(class='dropdown')
                                    button(class='btn btn-primary dropdown-toggle' type='button') Choose your Park






                
                  
                    


    p #{owner.area}
    
   

    
   
    
    
    
 
   
