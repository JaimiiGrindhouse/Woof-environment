
html(lang="en")

head
    //BOOTSTRAP LINKS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    
    //CSS LINK
    style
        include styles.css
    //TAB TITLE
    title Woof : #{owner.name}
    //FAVICON
    link(rel='icon' href='/images/logo.svg')


body(class='container')
    //NAVBAR
    nav(class='navbar fixed-top')
        div(class='row')
            div(class='col')
                img(src='/images/woof_text_logo_stacked.png' style='width:91px; height:41px;')
                    
                    
    //APP BODY
    div(class='container')
        div(class='app')
            div(class='row')
                div(class='col-12 col-sm-7')
                    //USER AND DOG PROFILE
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-4 offset-sm-4 offset-lg-5')
                                h1(class='card-title') Profile
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                b #{owner.name}
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='/images/owners/' + owner.id + '.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Email: 
                                            p #{owner.email}
                                        div(class='row')
                                            b Phone No: 
                                            p #{owner.phone}
                                        div(class='row')    
                                            b Area
                                            p #{owner.area}
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                b #{dog.name}
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='/images/dogs/' + owner.id + '.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Breed: 
                                            p #{dog.breed}
                                        div(class='row')
                                            b Size: 
                                            p #{dog.size}
                                        div(class='row')
                                            b Age: 
                                            p #{dog.age}
                div(class='col-12 col-sm-5')
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-3 offset-sm-2 offset-lg-3')
                                h2(class='card-title') Go for a walk!
                            
                            
                            form(action='/matches' method='POST')

                                div(class='row offset-1 offset-sm-1')
                                    div(class='dropdown')
                                        p
                                        label(for='areaselect') Choose your Area to find a walk:
                                        //- Create a drop down menu using Select element, and applying dropdown-toggle CSS property     
                                        select(class='btn btn-primary dropdown-toggle' name='areaselect')
                                            //- We loop through the areas array, extracting a variable called area
                                            for area in areas
                                                //- we build the option list from the id and name properties on the area object
                                                option(value=area.id) #{area.area}

                                div(class='row offset-1 offset-sm-1')
                                    div(class='dropdown')
                                        p
                                        label(for='parkselect') Choose your Park to find a walk:
                                        //- Create a drop down menu using Select element, and applying dropdown-toggle CSS property     
                                        select(class='btn btn-primary dropdown-toggle' name='parkselect')
                                            //- We loop through the parks array, extracting a variable called park
                                            for park in parks
                                                //- we build the option list from the id and name properties on the area object
                                                option(value=park.id) #{park.park}
                                
                                //- render the submit button
                                div(class='button')
                                input(type='submit' value='Submit' class='btn btn-primary')

        
    
   
    
    
    
 
   
