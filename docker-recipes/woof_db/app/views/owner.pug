
html(lang="en")

head
    //RESPONSIVE DESIGN METATAGS 
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    //BOOTSTRAP LINKS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    script(type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js")
    
    //CSS LINK
    style
        include styles.css
    script
        include script.js
    //TAB TITLE
    title Woof : #{owner.name}
    //FAVICON
    link(rel='icon' href='STYLE/LOGO.svg')


body(class='container')
    //NAVBAR
    nav(class='navbar fixed-top')
        div(class='row')
            div(clas='col')
                img(src='/images/LOGO.svg' style='width:45%')
                    
                    
    //APP BODY
    div(class='container')
        div(class='app')
            div(class='row')
                div(class='col-12 col-sm-7')
                    //USER AND DOG PROFILE
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-4 offset-sm-4 offset-lg-5')
                                h1(class='card-title') Profile
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                b #{owner.name}
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='/images/owners/' + owner.id + '.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Email: 
                                            p #{owner.email}
                                        div(class='row')
                                            b Phone No: 
                                            p #{owner.phone}
                                        div(class='row')    
                                            b Area
                                            p #{owner.area}
                            div(class='card-element')
                                div(class='row')
                                    div(class='col-6')
                                            div(class='row offset-1 offset-sm-2')
                                                b #{dog.name}
                                            div(class='row offset-1 offset-sm-2')
                                                img(src='/images/dogs/' + owner.id + '.jpg' class='img-fluid profile-pic')
                                                //implementation of img for user profile 
                                    div(class='col')
                                        div(class='row')
                                            b Breed: 
                                            p #{dog.breed}
                                        div(class='row')
                                            b Size: 
                                            p #{dog.size}
                                        div(class='row')
                                            b Age: 
                                            p #{dog.age}
                div(class='col-12 col-sm-5')
                    div(class='card')
                        div(class='card-body')
                            div(class='row offset-3 offset-sm-2 offset-lg-3')
                                h2(class='card-title') Go for a walk!
                            div(class='row offset-1 offset-sm-1')
                                div(class='dropdown')
                                    button(class='btn btn-primary dropdown-toggle' type='button' id="AreaMenu" data-bs-toggle="dropdown" aria-expanded="false") Choose your Area
                                    ul(class="dropdown-menu" aria-labelledby="AreaMenu")
                                        for item in dbAreas 
                                            li
                                                a(class="dropdown-item" href="#" onclick='areaClick("'+ item.area + '")') #{item.area}
                                div(class='row offset-1 offset-sm-1')
                                div(class='dropdown')
                                    button(class='btn btn-primary dropdown-toggle' type='button' id="ParkMenu" onclick='filterParks(' + allParks + ')') Choose your Park
                                    p(id='test')
                                div(class='row offset-3 button')
                                    img(src='/images/BUTTON.svg' type='submit'  value='submit' onclick='parkSelected("' + owner.id + '","' + dog.size +'")') 
                                    

                                    
                                  
                                    
                                    
                                    


                                    
                                    

                                    

    
    
   

    
   
    
    
    
 
   
